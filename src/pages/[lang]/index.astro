---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import { t, LOCALES } from "../../i18n";
import { getCollection } from 'astro:content';
import { createLangUrl } from "../../utils/urls";
import { getSeriesByLang, getStandaloneStoriesByLang } from "../../utils/series";

export function getStaticPaths() {
  return LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const _ = (k) => t(lang, k);

// Get series and standalone stories for this language
const series = await getSeriesByLang(lang);
const standaloneStories = await getStandaloneStoriesByLang(lang);

// Combine and sort by date for latest section (limit to 3)
const allContent = [
  ...series.map(s => ({ 
    type: 'series', 
    ...s, 
    date: s.lastUpdated,
    title: s.maintitle,
    description: s.maindescription 
  })),
  ...standaloneStories.map(s => ({ 
    type: 'story', 
    ...s 
  }))
].sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()).slice(0, 3);
---

<BaseLayout 
  title={`${_('home.hero.title')} — Tale`}
  description={_('home.hero.description')}
  lang={lang}
>
  <Header lang={lang} />

  <!-- Language Switcher -->
  <div class="bg-gray-50 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-2">
      <div class="flex justify-end space-x-4 flex-wrap">
        <a href={createLangUrl('it')} class={`text-sm transition-colors duration-200 ${lang === 'it' ? 'font-bold text-purple-600 dark:text-purple-400' : 'text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400'}`}>
          🇮🇹 Italiano
        </a>
        <a href={createLangUrl('en')} class={`text-sm transition-colors duration-200 ${lang === 'en' ? 'font-bold text-purple-600 dark:text-purple-400' : 'text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400'}`}>
          🇬🇧 English
        </a>
        <a href={createLangUrl('es')} class={`text-sm transition-colors duration-200 ${lang === 'es' ? 'font-bold text-purple-600 dark:text-purple-400' : 'text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400'}`}>
          🇪🇸 Español
        </a>
        <a href={createLangUrl('fr')} class={`text-sm transition-colors duration-200 ${lang === 'fr' ? 'font-bold text-purple-600 dark:text-purple-400' : 'text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400'}`}>
          🇫🇷 Français
        </a>
        <a href={createLangUrl('de')} class={`text-sm transition-colors duration-200 ${lang === 'de' ? 'font-bold text-purple-600 dark:text-purple-400' : 'text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400'}`}>
          🇩🇪 Deutsch
        </a>
        <a href={createLangUrl('zh')} class={`text-sm transition-colors duration-200 ${lang === 'zh' ? 'font-bold text-purple-600 dark:text-purple-400' : 'text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400'}`}>
          🇨🇳 中文
        </a>
        <a href={createLangUrl('ja')} class={`text-sm transition-colors duration-200 ${lang === 'ja' ? 'font-bold text-purple-600 dark:text-purple-400' : 'text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400'}`}>
          🇯🇵 日本語
        </a>
      </div>
    </div>
  </div>

  <main class="bg-white dark:bg-gray-900 transition-colors duration-300">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-purple-600 to-indigo-600 dark:from-purple-700 dark:to-indigo-700 text-white py-24 transition-colors duration-300">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="max-w-4xl mx-auto">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
            {_('home.hero.title')}
          </h1>
          <p class="text-xl md:text-2xl mb-6 text-purple-100">
            {_('home.hero.subtitle')}
          </p>
          <p class="text-lg mb-8 text-indigo-100 leading-relaxed">
            {_('home.hero.description')}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={createLangUrl(lang, '/about')} class="inline-block bg-white text-purple-600 font-semibold px-8 py-3 rounded-lg hover:bg-gray-100 transition-colors">
              {_('nav.about')}
            </a>
            <a href={createLangUrl(lang, '/blog')} class="inline-block bg-transparent border-2 border-white text-white font-semibold px-8 py-3 rounded-lg hover:bg-white hover:text-purple-600 transition-colors">
              {_('nav.blog')}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-white dark:bg-gray-900 transition-colors duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4 transition-colors duration-300">
            {_('home.features.title')}
          </h2>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center p-6">
            <div class="text-5xl mb-4">📖</div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-3 transition-colors duration-300">
              {_('home.features.stories.title')}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 transition-colors duration-300">
              {_('home.features.stories.description')}
            </p>
          </div>
          
          <div class="text-center p-6">
            <div class="text-5xl mb-4">📚</div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-3 transition-colors duration-300">
              {_('home.features.serialized.title')}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 transition-colors duration-300">
              {_('home.features.serialized.description')}
            </p>
          </div>
          
          <div class="text-center p-6">
            <div class="text-5xl mb-4">🌍</div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-3 transition-colors duration-300">
              {_('home.features.multilang.title')}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 transition-colors duration-300">
              {_('home.features.multilang.description')}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Latest Stories Section -->
    <section class="py-20 bg-gray-50 dark:bg-gray-800 transition-colors duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4 transition-colors duration-300">
            {_('home.latestStories.title')}
          </h2>
        </div>
        
        {allContent.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
            {allContent.map((item) => (
              <article class="bg-white dark:bg-gray-700 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden">
                <div class="p-6">
                  <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400 mb-3 transition-colors duration-300">
                    <FormattedDate date={item.date} />
                    {item.type === 'series' && (
                      <span class="bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 px-2 py-1 rounded-full text-xs font-medium">
                        {item.totalChapters} {lang === 'it' ? 'capitoli' : lang === 'es' ? 'capítulos' : lang === 'fr' ? 'chapitres' : lang === 'de' ? 'Kapitel' : lang === 'zh' ? '章节' : lang === 'ja' ? '章' : 'chapters'}
                      </span>
                    )}
                  </div>
                  <h3 class="text-xl font-semibold mb-3 line-clamp-2">
                    <a 
                      href={item.type === 'series' 
                        ? createLangUrl(lang, `/series/${item.taleid}`) 
                        : createLangUrl(lang, `/blog/${item.id}`)} 
                      class="text-gray-900 dark:text-gray-100 hover:text-purple-600 dark:hover:text-purple-400 transition-colors duration-200"
                    >
                      {item.title}
                    </a>
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3 transition-colors duration-300">
                    {item.description}
                  </p>
                  <a 
                    href={item.type === 'series' 
                      ? createLangUrl(lang, `/series/${item.taleid}`) 
                      : createLangUrl(lang, `/blog/${item.id}`)}
                    class="inline-flex items-center text-purple-600 dark:text-purple-400 hover:text-purple-700 dark:hover:text-purple-300 font-medium transition-colors duration-200"
                  >
                    {item.type === 'series' 
                      ? (lang === 'it' ? 'Leggi la serie' : lang === 'es' ? 'Leer la serie' : lang === 'fr' ? 'Lire la série' : lang === 'de' ? 'Serie lesen' : lang === 'zh' ? '阅读系列' : lang === 'ja' ? 'シリーズを読む' : 'Read series')
                      : _('common.readMore')
                    }
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <div class="bg-white dark:bg-gray-700 rounded-xl shadow-lg p-12 max-w-lg mx-auto transition-colors duration-300">
              <div class="text-6xl mb-6">📝</div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-3 transition-colors duration-300">
                {_('home.latestStories.noStories')}
              </h3>
              <p class="text-gray-500 dark:text-gray-400 transition-colors duration-300">
                {lang === 'it' ? 'I racconti arriveranno presto...' : 
                 lang === 'es' ? 'Los relatos llegarán pronto...' :
                 lang === 'fr' ? 'Les récits arriveront bientôt...' :
                 lang === 'de' ? 'Die Erzählungen kommen bald...' :
                 lang === 'zh' ? '故事即将到来...' :
                 lang === 'ja' ? 'ストーリーは近日公開...' :
                 'Stories coming soon...'}
              </p>
            </div>
          </div>
        )}

        <!-- About Section -->
        <div class="mt-20 text-center">
          <div class="bg-white dark:bg-gray-700 rounded-xl shadow-lg p-12 max-w-4xl mx-auto transition-colors duration-300">
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-gray-100 mb-6 transition-colors duration-300">
              {_('home.about.title')}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed transition-colors duration-300">
              {_('home.about.description')}
            </p>
            <div class="mt-8">
              <a href={createLangUrl(lang, '/about')} class="inline-block bg-purple-600 text-white font-semibold px-8 py-3 rounded-lg hover:bg-purple-700 transition-colors">
                {_('common.seeMore')}
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    
  </main>

  <Footer lang={lang} />
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>